@model IEnumerable<WardrobeApp.Models.Accessory>

@{
    ViewBag.Title = "Index";
}

<h4>Accessories</h4>

<p>
    <button type="button" class="btn btn-default">Add a New Accessory to the Closet<a href="/Accessories/Create"> <i class="fas fa-plus-circle"></i></a></button>
</p>

@foreach (var item in Model)
{

    <div class="col-md-4">
        <div class="thumbnail outfit">
            <div class="caption outfit">
                <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                <img src="@Html.DisplayFor(modelItem => item.Photo)" class="clothes-thumbnail" /><br /><br />
                <p>
                    <div class='banner'><div class='banner_l'></div><div class='banner_txt'>@Html.DisplayFor(modelItem => item.Type)</div><div class='banner_r'></div></div>
                </p>
                <p>
                    <a href="@Url.Action("Edit", "Accessories", new { id = item.AccessoriesID })" class="fas fa-edit"></a>
                    <a href="@Url.Action("Details", "Accessories", new { id = item.AccessoriesID })" class="fas fa-info-circle"></a>
                    <a href="@Url.Action("Delete", "Accessories", new { id = item.AccessoriesID})" class="fas fa-trash-alt"></a>
                </p>

            </div>
        </div>
    </div>
}
</div>